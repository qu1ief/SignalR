@model CheckoutVM

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Checkout</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<main id="content" class="page-section inner-page-sec-padding-bottom space-db--20">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Checkout Form s-->
                <div class="checkout-form">
                    <div class="row row-40">
                        <div class="col-12">
                            <h1 class="quick-title">Checkout</h1>
                            <!-- Slide Down Trigger  -->
                            <div class="checkout-quick-box">
                                <p>
                                    <i class="far fa-sticky-note"></i>Returning customer? <a href="javascript:"
                                                                                             class="slide-trigger" data-target="#quick-login">
                                        Click
                                        here to login
                                    </a>
                                </p>
                            </div>
                            <!-- Slide Down Blox ==> Login Box  -->


                        </div>
                        <div class="col-lg-7 mb--20">
                            <!-- Billing Address -->
                            <form method="post" asp-action="Checkout" asp-controller="order" class="mb-40" id="checkoutformss">
                                <h4 class="checkout-title">Billing Address</h4>
                                <div class="row">


                                    <div class="col-md-6 col-12 mb--20">
                                        <label asp-for="OrderVM.City" >City</label>
                                        <input asp-for="OrderVM.City" type=" text" placeholder="City">
                                        <span class="text-danger" asp-validation-for="OrderVM.City"></span>
                                    </div>

                                    <div class="col-md-6 col-12 mb--20">
                                        <label asp-for="OrderVM.Town">Town</label>
                                        <input asp-for="OrderVM.Town" type="text" placeholder="Town">
                                        <span class="text-danger" asp-validation-for="OrderVM.Town"></span>

                                    </div>
                                    <div class="col-md-6 col-12 mb--20">
                                        <label asp-for="OrderVM.Address">Address</label>
                                        <input asp-for="OrderVM.Address" type="text" placeholder="Address">

                                    </div>
                                    <div class="col-md-6 col-12 mb--20">
                                        <label asp-for="OrderVM.ZipCode">Zip Code*</label>
                                        <input asp-for="OrderVM.ZipCode" type="text" placeholder="Zip Code">

                                    </div>



                                </div>

                            </form>


                        </div>

                        <div class="col-lg-5">
                            <div class="row">
                                <!-- Cart Total -->
                                <div class="col-12">
                                    <div class="checkout-cart-total">
                                        <h2 class="checkout-title">YOUR ORDER</h2>
                                        <h4>Product <span>Total</span></h4>
                                        <ul>

                                            @foreach (var item in Model.CheckoutItems)
                                            {

                                                <li>
                                                    <span class="@item.Name X @item.Count</span> <span class="right">$@item.Price</span>
                                                </li>
                                            }

                                        </ul>
                                        <p>Sub Total <span>$@Model.TotalPrice</span></p>
                                        <p>Shipping Fee <span>$00.00</span></p>
                                        <h4>Grand Total <span>$@Model.TotalPrice</span></h4>
                                        <div class="method-notice mt--25">
                                  
                                        </div>
                                        <div class="term-block">
                                            <input type="checkbox" id="accept_terms2">
                                            <label for="accept_terms2">
                                                I’ve read and accept the terms &
                                                conditions
                                            </label>
                                        </div>
                                     
                                        <button type="submit" form="checkoutformss" class="place-order w-100">Place order</button>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>



        </div>

    </div>
</main>



